# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eden_db
DB_USER=postgres
DB_PASSWORD=postgres

# Server Configuration
PORT=3000

# Calling Agent Configuration (Phase 2A)
# Use dry_run until telephony setup is verified.
EDEN_CALL_MODE=dry_run

# Twilio (required only when EDEN_CALL_MODE=live)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
# Optional: fully-qualified URL for status webhooks
# TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/webhooks/twilio/status
# Optional override specifically for warm transfer legs
# TWILIO_WARM_TRANSFER_STATUS_CALLBACK_URL=https://your-domain.com/webhooks/twilio/warm-transfer-status

# AI (optional for Phase 2B)
# If OPENAI_API_KEY is not set, Eden uses deterministic fallback behavior.
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
